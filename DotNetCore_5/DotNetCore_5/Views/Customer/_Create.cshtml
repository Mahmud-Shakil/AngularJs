
<form enctype="multipart/form-data" class="mt-3">
    <div class="modal-header">
        <h5 class="modal-title" id="categoryModalLabel">Add Customer</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row" id="0">
            <div class="col-md-12 mx-auto">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" ng-model="newCustomer.FirstName" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Last Name</label>
                  
                    <input type="text" class="form-control" ng-model="newCustomer.LastName" />

                </div>
                    <div class="form-group position-relative mb-3">
                        <label class="form-label"> Date of Birth</label>
                      
                        <input type="date" class="form-control " ng-model="newCustomer.DateOfBirth" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Email </label>
                        <input type="text" class="form-control" ng-model="newCustomer.Email" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" ng-model="newCustomer.City" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" ng-model="newCustomer.Address" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Post Code</label>
                        <input type="text" class="form-control" ng-model="newCustomer.PostCode" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Phone Number</label>
                        <input type="text" class="form-control" ng-model="newCustomer.PhoneNumber" />
                    </div>
                <div class="form-group mb-3">
                    <label class="form-label mb-3">Image</label>
                    <img src="~/images/noI.jpg" style="height:90px!important; width:auto!important;" class="form-control change_edit mb-3" asp-append-version="true" ng-model="newCustomer.ImageName" />
                    <input class="form-control change_image" type="file" ngf-select="UploadFiles($files)" required />
                </div>
            </div>
        </div>
        @*<div class="col-md-12">
            <button id="addModelButton" type="button" class="btn btn-info btn-block">Add more Customer</button>
        </div>
        <input id="sl" type="hidden" value="0" />*@

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary clear-photo" data-bs-dismiss="modal" ng-click="Insert()">Create</button>
        <button type="submit" data-bs-dismiss="modal" class="btn btn-primary">Cancel</button>
    </div>
</form>
