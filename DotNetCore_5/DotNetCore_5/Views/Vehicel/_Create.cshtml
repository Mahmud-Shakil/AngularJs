

<link href="~/css/imageCss.css" rel="stylesheet" />
<form enctype="multipart/form-data" >
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label class="form-label">Model</label>
                    <input type="text" class="form-control" ng-model="newVehicel.Model" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Manufacturer</label>

                    <input type="text" class="form-control" ng-model="newVehicel.Manufacturer" />

                </div>
                <div class="form-group position-relative mb-3">
                    <label class="form-label"> Registration Number</label>

                    <input type="text" class="form-control " ng-model="newVehicel.RegistrationNumber" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Daily Hire Rate </label>
                    <input type="number" class="form-control" ng-model="newVehicel.DailyHireRate" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label mb-3">Image</label>
                    <img src="~/images/noI.jpg" style="height:90px!important; width:auto!important;" class="form-control change_edit mb-3" asp-append-version="true" ng-model="newCustomer.ImageName" />
                    <input class="form-control change_image" type="file" ngf-select="UploadFiles($files)" required />
                </div>
            </div>
        </div>
        @*<div class="col-md-12">
            <button id="addModelButton" type="button" class="btn btn-info btn-block">Add more Customer</button>
        </div>
        <input id="sl" type="hidden" value="0" />*@
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-warning" value="Save" data-bs-dismiss="modal" ng-click="Insert()" />
        </div>
    </div>
    
</form>



